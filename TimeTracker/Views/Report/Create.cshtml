@model TimeTracker.Models.ReportViewModel

@{
	ViewData["Title"] = "Run Report";
}

<h1>Run Report</h1>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			
			<div class="form-group mb-3">
				@Html.DropDownListFor(m=>m.ContractId,Model.ContractList,"Select Contract")
				<span asp-validation-for="ContractId" class="text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="Start" class="control-label"></label>
				<input asp-for="Start" class="form-control" />
				<span asp-validation-for="Start" class="text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="End" class="control-label"></label>
				<input asp-for="End" class="form-control" />
				<span asp-validation-for="End" class="text-danger"></span>
			</div>
			<div class="row">
				<div class="col">
					<input type="submit" value="Create" class="btn btn-sm btn-primary" />
					@*<a asp-action="Index" class="btn btn-sm btn-secondary">Back to List</a>*@
				</div>
			</div>
		</form>
	</div>
</div>


@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
